<?xml version="1.0" encoding="UTF-8"?><persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Homeworks_JPA">
		<jta-data-source>java:/MySql</jta-data-source>

		<class>entity.AssignSubmitRecord</class>
		<class>entity.Assignment</class>
		<class>entity.Course</class>
		<class>entity.LessonRecord</class>
		<class>entity.Student</class>
		<class>entity.TuitorAssign</class>
		<class>entity.Admin</class>
		<class>entity.Term</class>
		<class>entity.Lesson</class>
		<class>entity.Teacher</class>
		<class>entity.TeacherAssign</class>
		<class>entity.Comment</class>
		<class>entity.Assignmentsummary</class>
		<class>entity.Lessonsummary</class>
		<class>entity.Studentscoresummary</class>
		<class>entity.Goal</class>	
		<properties>
 			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
 			<property name="hibernate.hbm2ddl.auto" value="update"/>
 		</properties>
	</persistence-unit>
</persistence>
